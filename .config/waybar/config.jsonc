{
    "reload_style_on_change": true, // turn off for debugging
    // "height": 34, // Waybar height (to prevent "reconfigured" logs and shaky bar)
    "spacing": 4, // Gaps between modules (4px)
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "mpd",
        "tray",
        "idle_inhibitor",
        "custom/power",
        "power-profiles-daemon",
        "network",
        "bluetooth",
        "pulseaudio",
        "backlight",
        "battery",
        "battery#bat2",
        "clock"
