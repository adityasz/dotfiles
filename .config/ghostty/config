# custom-shader = ./shaders/retro-terminal.glsl
# custom-shader = ./shaders/glitchy.glsl
# custom-shader = ./shaders/bettercrt.glsl

keybind=clear

window-height     = 1280
window-width      = 1280
window-decoration = false
gtk-titlebar      = false

# Since ghostty is not a superset of tmux like kitty, tmux has to be used, and
# ghostty's tab bar, if ever needed, will be on the top
gtk-tabs-location = top

foreground     = 000000
background     = ffffff
bold-is-bright = true

font-size      = 14
font-variation = wght=400

keybind = alt+backspace=text:\x17
keybind = f11=toggle_fullscreen
keybind = alt+f5=reload_config
keybind = ctrl+alt+shift+t=new_tab
keybind = alt+shift+p=toggle_command_palette
keybind = alt+shift+n=new_window
keybind = alt+c=copy_to_clipboard
keybind = alt+v=paste_from_clipboard
keybind = alt+minus=decrease_font_size:1
keybind = alt+equal=increase_font_size:1

shell-integration-features = ssh-terminfo

