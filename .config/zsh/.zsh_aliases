alias venv="source .venv/bin/activate"
alias man='MANPAGER="nvim +Man!" man'
alias icat='kitten icat'
alias rg='rg --hyperlink-format=kitty'
alias adb='HOME="$XDG_DATA_HOME/android" adb'
alias wolfram='/opt/Wolfram/Mathematica/12.1/Executables/wolfram'
alias nvidia-settings='nvidia-settings --config="$XDG_CONFIG_HOME/nvidia/settings"'
alias svn='svn --config-dir "$XDG_CONFIG_HOME/subversion"'
alias wget='wget --hsts-file="$XDG_DATA_HOME/wget-hsts"'
alias courses='cd $HOME/IITB/year-3/autumn/'
# alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias cpus='sudo watch -n1 "turbostat --show Core,CPU,Busy%,Bzy_MHz,IPC,CoreTmp,PkgWatt,CorWatt,GFXWatt --quiet -i 1 sleep 1"'
alias gpu='watch -n1 "nvidia-smi"'
alias gpu-state='cat /sys/bus/pci/devices/0000\:01\:00.0/power_state'
alias ascii='cat /home/aditya/Documents/Documentation/ascii'
alias iitblan='curl --location-trusted -u 22b0056:${IITB_INTERNET_TOKEN} 'https://internet.iitb.ac.in/login.php' --connect-timeout 0 > /dev/null'
alias z='zoxide'
alias hotspot-toggle='nmcli -t c show --active | grep Hotspot && nmcli c down Hotspot || nmcli c up Hotspot'
alias code='code'
alias ranger='ranger --choosedir=$XDG_STATE_HOME/ranger/lastdir; LASTDIR=`cat $XDG_STATE_HOME/ranger/lastdir`; cd "$LASTDIR"'
alias matlab='/opt/MATLAB/bin/matlab'
alias mojo-deps='export LD_LIBRARY_PATH=/opt/mojo-deps/lib/x86_64-linux-gnu:/opt/mojo-deps/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH'
