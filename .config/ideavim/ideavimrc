    if &ide =~? 'rustrover'
        map <Leader>b  <Action>(Rust.Build)
    else
        map <Leader>b  <Action>(Build)
    endif

    if &ide =~? 'dataspell'
        map <Leader>q  <Action>(Console.Jdbc.Execute)
    endif

    if &ide =~? 'pycharm'
        map <Leader>q  <Action>(Console.Jdbc.Execute)
    endif
endif
