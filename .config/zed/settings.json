// Docs: https://zed.dev/docs/configuring-zed
// Default settings: `zed: open default settings` command
{
  "resize_all_panels_in_dock": ["left"],
  "agent": {
    "stream_edits": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro"
    },
    "default_profile": "ask",
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 18,
  "buffer_font_weight": 500,
  "buffer_font_features": {
    "liga": true,
    "calt": true
  },
  "ui_font_size": 18,
  "ui_font_family": "Inter",
  "ui_font_weight": 500,
  "agent_font_size": 20,
  "ensure_final_newline_on_save": true,
  "soft_wrap": "editor_width",
  "format_on_save": "off",
  "current_line_highlight": "none",
  "theme": {
    "mode": "system",
    "dark": "VSCode Dark Modern",
    "light": "Nice Light Theme"
  },
  "search": {
    "case_sensitive": true,
    "regex": true
  },
  "hide_mouse": "on_typing_and_movement",
  "project_panel": {
    "hide_root": true
  },
  "collaboration_panel": {
    "button": false
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank", // No way to copy to system clipboard if this is set to never
    "toggle_relative_line_numbers": true
  },
  "base_keymap": "VSCode",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "terminal": {
    "font_weight": 600,
    "shell": {
      "program": "zsh"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "vertical_scroll_margin": 3, // 0 leads to bugs in git diffs (multibuffers), search panel hides lines on the top, etc.; zt does not serve its purpose with values other than 0
  "tab_bar": {
    "show": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "git_panel": {
    "sort_by_path": true
  },
  "outline_panel": {
    "indent_size": 20
  },
  "minimap": {
    "show": "never"
  },
  "languages": {
    "C": {
      "tab_size": 4,
      "hard_tabs": true
    },
    "C++": {
      "tab_size": 4,
      "hard_tabs": true
    },
    "Python": {
      "tab_size": 4,
      "hard_tabs": false,
      "language_servers": ["ruff", "basedpyright", "!ty", "!pyright", "!pylsp", "..."],
      "auto_indent_on_paste": false,
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true, // Fix all auto-fixable lint violations
            "source.organizeImports.ruff": true // Organize imports
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Typst": {
      "tab_size": 2,
      "hard_tabs": false,
      "language_servers": ["tinymist"]
    },
    "JSON": {
      "tab_size": 4,
      "hard_tabs": true
    },
    "HTML": {
      "tab_size": 4,
      "hard_tabs": true
    },
    "CSS": {
      "tab_size": 4,
      "hard_tabs": true
    },
    "JavaScript": {
      "tab_size": 4,
      "hard_tabs": true
    },
    "TypeScript": {
      "tab_size": 4,
      "hard_tabs": true
    }
  },
  "file_types": {
    "CMake": ["CMakeLists.txt"]
  },
  "lsp": {
    "pyright": {
      "python": {
        "pythonPath": ".venv/bin/python"
      }
    },
    "mojo": {
      "settings": {
        // "lsp_path": ".magic/envs/default/bin/mojo-lsp-server",
        "args": ["--log=verbose"]
      }
    },
    "tinymist": {
      "settings": {
        "rootPath": "."
      }
    }
  },
  "jupyter": {
    "kernel_selections": {
      "python": "vkernel"
    }
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  }
}
